{
  "name": "gitbook-starter-kit",
  "private": true,
  "license": "MIT",
  "version": "1.0.1",
  "description": "GitBook Starter Kit.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepublish": "gitbook install",
    "start": "gitbook serve",
    "build": "gitbook build . esperia.github.io/github-getting-started",
    "eslint": "eslint src/**/*.js",
    "eslint:md": "eslint -c .md.eslintrc --ext .md ja/**/*.md",
    "textlint": "gulp textlint",
    "test:js": "mocha",
    "test": "npm-run-all --parallel test:js textlint eslint:md eslint build"
  },
  "keywords": [
    "gitbook",
    "textlint"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "eslint": "^3.0.0",
    "eslint-plugin-markdown": "git://github.com/eslint/eslint-plugin-markdown.git",
    "gitbook-cli": "^2.1.3",
    "gitbook-plugin-include-codeblock": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-textlint": "^2.0.0",
    "mocha": "^3.0.0",
    "npm-run-all": "^4.0.0",
    "power-assert": "^1.3.1",
    "textlint": "^7.0.1",
    "textlint-rule-no-start-duplicated-conjunction": "^1.0.7",
    "textlint-rule-preset-japanese": "^1.3.2",
    "textlint-rule-prh": "^3.0.1"
  }
}
